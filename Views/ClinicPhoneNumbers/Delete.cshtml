@model Health_Care_V1._2.Models.ClinicPhoneNumber

@{
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<h1 class="view-header">Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h6>Clinic ID: @ViewBag.ClinicId</h6>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @{
                decimal phoneNumber = Math.Round(Model.PhoneNumber, 0);
            }
            @phoneNumber
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Clinic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clinic.ClinicName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" asp-route-clinicId="@Model.ClinicId" asp-route-clinicName="@ViewBag.ClinicName" /> |
        <a asp-action="Index" asp-route-clinicId="@Model.ClinicId" asp-route-clinicName="@ViewBag.ClinicName">Back to List</a>
    </form>
</div>
