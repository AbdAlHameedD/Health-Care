@model Health_Care_V1._2.Models.Employee

@{
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<h1 class="view-header">Details</h1>

<div>
    <h6>Employee ID: @Model.Id</h6>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Account ID
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.AccountId1
        </dd>
        <dt class = "col-sm-2">
            Full Name
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.FullName
        </dd>
        <dt class = "col-sm-2">
            Clinic Name
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.ClinicName
        </dd>
        <dt class = "col-sm-2">
            Gender
        </dt>
        @if (ViewBag.Gender == "M")
        {
            <dd class = "col-sm-10">
                Male
            </dd>
        }
        else
        {
            <dd class = "col-sm-10">
                Female
            </dd>
        }
        <dt class = "col-sm-2">
            Salary
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-employeeName="@ViewBag.FullName" asp-route-clinicId1="@ViewBag.ClinicId"
        asp-route-clinicName="@ViewBag.ClinicName" asp-route-accountId="@ViewBag.AccountId1" >Edit</a> |
    <a asp-action="Index" asp-route-clinicId="@ViewBag.ClinicId" asp-route-clinicName="@ViewBag.ClinicName">Back to List</a>
</div>
