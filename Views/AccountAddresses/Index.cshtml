@model IEnumerable<Health_Care_V1._2.Models.AccountAddress>

@{
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<h1 class="view-header">Account Address</h1>

@if(Model.Count() == 0)
{
    <p>
        <a asp-action="Create" asp-route-accountId="@ViewBag.AccountId1" asp-route-accountName="@ViewBag.AccountName">Add New Address</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                @{
                    decimal id = Math.Round(item.Id, 0);
                }
            <td>
                @id 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
                    @if(item.City is null)
                    {
                    <td>No Data</td>
                    }
                    else
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                    }
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-accountName="@ViewBag.AccountName">
                    <img src="~/images/edit.png" alt="Edit" title="Edit" width="22" height="22" />
                </a> |
                <a asp-action="Details" asp-route-id="@item.Id" asp-route-accountName="@ViewBag.AccountName">
                    <img src="~/images/details.png" alt="Details" title="Details" width="22" height="22" />
                </a> |
                <a asp-action="Delete" asp-route-id="@item.Id" asp-route-accountName="@ViewBag.AccountName">
                    <img src="~/images/delete.png" alt="Delete" title="Delete" width="22" height="22" />
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
