@model Health_Care_V1._2.Models.AccountPhoneNumber

@{
    if (ViewBag.Permission == "ADMIN")
    {
        Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
    }
    else if (ViewBag.Permission == "DOCTOR")
    {
        Layout = "~/Views/Shared/_DoctorDashboardLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_PatientDashboardLayout.cshtml";
    }
}

<h1 class="view-header">Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h6>Account ID: @ViewBag.AccountId</h6>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @{
                decimal phoneNumber = Math.Round(Model.PhoneNumber, 0);
            }
            @phoneNumber
        </dd>
        <dt class = "col-sm-2">
            Full Name
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.AccountName
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" asp-route-accountId="@Model.AccountId" asp-route-accountName="@ViewBag.AccountName" /> |
        <a asp-action="Index" asp-route-accountId="@Model.AccountId" asp-route-accountName="@ViewBag.AccountName">Back to List</a>
    </form>
</div>
